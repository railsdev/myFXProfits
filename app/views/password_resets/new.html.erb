
<% provide(:button, 'signup') %>
<% provide(:button_content, "Sign Up") %>

<div class = "container">
	<div style = "width: 470px; margin-left: 235px;">
		<div class = "fieldgroup">
			<div class = "fields">
				<h5 style = "display: inline;">Forgot password</h5>
				<br>
				<br>
				<%= form_tag password_resets_path, :method => :post do %>
				<%= label_tag :email %>
				<%= text_field_tag :email, params[:email] %>
				<div class="actions"><%= submit_tag "Reset Password",  class: "btn btn-success"%></div>
				<% end %>

	
			</div>
		</div>
	</div>
</div>
