<script src="../assets/javascripts/jquery.js"></script>
<script type = "text/javascript">
  function loadComments(id) {
    alert("ME")
    $.ajax({
      url: "/retrieve_answers",
      type: "GET",
      data: 'id='+id,
      success: function(resp) {
        $("#answer-column").empty()
        $("#answer-column").append(resp)
        alert("worked")
        
      },

    }) 
  };
</script>
<div class = "container" id="post-container">
  <div class = "posts" >
    <%= render @posts %>
  </div>
</div>
<div class = "container" id="answer-column">
  <div class = "posts" >
    <%= render partial: "answers/answers", object: Post.first.answers  %>
  </div>
</div>
