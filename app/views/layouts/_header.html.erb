<div class="header-container">    
  <div class = "container clearfix">

     <!-- <a href = "/signup" class = "left"><img src = "./../assets/logo.png"/></a> -->
      <h1 class = "left"style = "display: inline;">
       <a href="/signup"  class = "headerlinks">myfxprofits</a>
     </h1>
      <!-- Links to various Pages -->
      <h5 class = "headerlinkscontainer left" style = "display: inline; padding-left: 20px; ">
      <a href="/about"  class = "headerlinks">About</a>
      <a href = '/'    class = "headerlinks"> Plans</a>
      <a href = '/'    class = "headerlinks"> Videos</a>
      <a href = '/'    class = "headerlinks"> Trading Room</a></h5>
              
      <!-- Button to trigger Sign In -->
      <h5 style = "padding-top: 10px;"><a style = "width: 75px;" href="#signin" role="button" class="btn right" data-toggle="modal">Sign In</a></h5>
      

      <!-- Modal -->

    <div id="signin" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="signinLabel" aria-hidden="true">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
        <h3 id="signinLabel">Sign In</h3>
      </div>

      <div class="modal-body">

        <%= form_for(:session, url: sessions_path) do |f| %>
        <h6>Email or Username</h6>
        <%= f.text_field :email, :placeholder => "Insert Email Here"%>
        <h6>Password <a href = '/reset' >(Forgot Password?)</a></h6>
        <%= f.password_field :password, :placeholder => "Password"%>
        <br>

      </div>
      <div class="modal-footer">
        <button class="btn left" data-dismiss="modal" aria-hidden="true">Close</button>
        <%= f.submit "Sign In!", class: "btn btn-success right"%>
        <% end %>
      </div>
    </div>
  </div>
</div>



