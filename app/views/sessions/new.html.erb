<% provide(:button, 'signup') %>
<% provide(:button_content, "Sign Up") %>

<div class = "container">
	<div style = "width: 470px; margin-left: 235px;">
		<div class = "fieldgroup">
			<div class = "fields">
				<%= form_for(:session, url: sessions_path) do |f| %>
				<h6>Email or Username</h6>
					<%= f.text_field :email, :placeholder => "Insert Email Here"%>
				<h6>Password <a href = '/reset' >(Forgot Password?)</a></h6>
					<%= f.password_field :password, :placeholder => "Password"%>
						<br>
						<br>
					<%= f.submit "Sign In!", class: "btn" %>
					<h6 class = "right" style = "display: inline; padding: 0px; margin-top: 7px;"> <a href = '/signup'>Not Registered? Sign Up for a free trial!</a></h6>
				<% end %>
			</div>
		</div>
	</div>
</div>
