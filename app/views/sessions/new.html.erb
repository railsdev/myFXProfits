<% provide(:button, 'signup') %>
<% provide(:button_content, "Sign Up") %>

<% if flash[:error] -%>
  <p class='alert center'><%=h flash[:error] %></p>
<% end -%>
<% if flash[:notice] -%>
  <p class='notice'><%=h flash[:notice] %></p>
<% end -%>
<div class = "container">
	<div style = "width: 470px; margin-left: 235px;">

		<div class = "fieldgroup">

			<div class = "fields">
				<h5 style = "display: inline;">Sign In</h5>
				<%= form_for(:session, url: sessions_path) do |f| %>
				<h6>Email or Username</h6>
					<%= f.text_field :email, :placeholder => "Insert Email Here"%>
				<h6>Password <a href = '/reset' >(Forgot Password?)</a></h6>
					<%= f.password_field :password, :placeholder => "Password"%>
						<br>

					<%= f.submit "Sign In!", class: "btn", style: "display: inline; margin-top: 8px;" %>
					<h6 class = "right" style = "display: inline; padding: 0px; margin-top: 15px;"> <a href = '/signup'>Not Registered? Sign Up for a free trial!</a></h6>
				<% end %>
			</div>
		</div>
	</div>
</div>
